<div class="article">
	<h3><%= link_to article.title, article, style:"color:#000" %></h3>
	<span>
		created by <%= article.user.email %>, <%= article.created_at.strftime("%B %d %Y") %>
	</span>

	<div>
		<p>
			<%= markdown truncate(article.content, length:300) %> 
			<%= link_to "Read more", article %>
		</p>
	</div>
</div>

<hr />